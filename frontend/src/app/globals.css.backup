@config "../../tailwind.config.ts";
@import "tailwindcss";

:root {
  --radius: 0.5rem;

  /* Beautiful gradient-inspired color palette for light mode */
  --background: oklch(0.99 0.002 264);
  --foreground: oklch(0.15 0.01 264);

  --card: oklch(1 0 0);
  --card-foreground: oklch(0.15 0.01 264);

  --popover: oklch(1 0 0);
  --popover-foreground: oklch(0.15 0.01 264);

  /* Primary: Modern vibrant blue with excellent contrast */
  --primary: oklch(0.55 0.22 250);
  --primary-foreground: oklch(0.99 0.002 264);

  /* Secondary: Soft purple accent */
  --secondary: oklch(0.96 0.01 270);
  --secondary-foreground: oklch(0.25 0.02 264);

  /* Muted: Refined neutral with slight blue tint */
  --muted: oklch(0.96 0.006 264);
  --muted-foreground: oklch(0.48 0.02 264);

  /* Accent: Energetic purple-blue */
  --accent: oklch(0.94 0.015 270);
  --accent-foreground: oklch(0.25 0.02 264);

  /* Destructive: Clear red for errors */
  --destructive: oklch(0.58 0.24 25);
  --destructive-foreground: oklch(0.99 0.002 25);

  /* Success: Fresh green */
  --success: oklch(0.62 0.19 145);
  --success-foreground: oklch(0.99 0.002 145);

  /* Warning: Warm amber */
  --warning: oklch(0.68 0.18 60);
  --warning-foreground: oklch(0.15 0.01 60);

  --border: oklch(0.9 0.004 264);
  --input: oklch(0.9 0.004 264);
  --ring: oklch(0.55 0.22 250);

  --chart-1: oklch(0.6 0.2 250);
  --chart-2: oklch(0.65 0.18 200);
  --chart-3: oklch(0.62 0.19 145);
  --chart-4: oklch(0.68 0.18 60);
  --chart-5: oklch(0.58 0.24 25);
}

.dark {
  /* Dark mode: Rich, deep colors with excellent readability */
  --background: oklch(0.12 0.015 264);
  --foreground: oklch(0.97 0.003 264);

  --card: oklch(0.17 0.015 264);
  --card-foreground: oklch(0.97 0.003 264);

  --popover: oklch(0.15 0.015 264);
  --popover-foreground: oklch(0.97 0.003 264);

  /* Primary: Brighter blue for dark mode visibility */
  --primary: oklch(0.65 0.24 250);
  --primary-foreground: oklch(0.12 0.015 250);

  /* Secondary: Subtle purple-gray */
  --secondary: oklch(0.22 0.02 270);
  --secondary-foreground: oklch(0.97 0.003 264);

  /* Muted: Refined dark with proper contrast */
  --muted: oklch(0.22 0.015 264);
  --muted-foreground: oklch(0.65 0.02 264);

  /* Accent: Vibrant purple for dark mode */
  --accent: oklch(0.25 0.025 270);
  --accent-foreground: oklch(0.97 0.003 264);

  /* Destructive: Softer red for dark mode */
  --destructive: oklch(0.62 0.23 25);
  --destructive-foreground: oklch(0.97 0.003 25);

  /* Success: Vibrant green for dark mode */
  --success: oklch(0.68 0.2 145);
  --success-foreground: oklch(0.12 0.015 145);

  /* Warning: Warm amber for dark mode */
  --warning: oklch(0.72 0.18 60);
  --warning-foreground: oklch(0.12 0.015 60);

  --border: oklch(0.25 0.015 264);
  --input: oklch(0.25 0.015 264);
  --ring: oklch(0.65 0.24 250);

  --chart-1: oklch(0.65 0.24 250);
  --chart-2: oklch(0.68 0.2 200);
  --chart-3: oklch(0.68 0.2 145);
  --chart-4: oklch(0.72 0.18 60);
  --chart-5: oklch(0.62 0.23 25);
}

@layer base {
  * {
    @apply border-border;
  }

  body {
    @apply bg-background text-foreground antialiased;
    font-family: var(--font-geist-sans), system-ui, -apple-system,
      BlinkMacSystemFont, "Segoe UI", sans-serif;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    @apply font-semibold tracking-tight;
  }

  h1 {
    @apply text-4xl lg:text-5xl;
  }

  h2 {
    @apply text-3xl lg:text-4xl;
  }

  h3 {
    @apply text-2xl lg:text-3xl;
  }
}

@layer utilities {
  .text-balance {
    text-wrap: balance;
  }

  .gradient-text {
    @apply bg-gradient-to-r from-primary via-purple-500 to-primary bg-clip-text text-transparent;
  }

  .card-hover {
    @apply transition-all duration-300 hover:shadow-lg hover:-translate-y-1;
  }
}
